<html>
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <div id="apiUrl" data-url="<%= apiUrl %>"></div>
    <script src="/js/parking.js"></script>
    <style>
      input[type="datetime-local"] {
        border: 2px solid gray; /* Blue border */
        border-radius: 8px; /* Rounded corners */
        padding: 10px;
        font-size: 16px;
        color: gray;
      }
    </style>
  </head>
  <body>
    <div
      class="d-flex flex-column vh-100 align-items-center justify-content-center"
    >
      <form
        id="reservationChecker"
        class="d-flex flex-column mb-3 justify-content-center gap-2"
      >
        <div class="d-flex gap-2">
          <div class="d-flex flex-column">
            <label
              for="fromPickerCheck"
              class="d-flex justify-content-center fw-bold"
            >
              FROM
            </label>
            <input id="fromPickerCheck" type="datetime-local" />
          </div>
          <div>
            <label
              for="toPickerCheck"
              class="d-flex justify-content-center fw-bold"
            >
              TO
            </label>
            <input id="toPickerCheck" type="datetime-local" />
          </div>
        </div>
        <button type="submit" class="btn btn-warning">
          Check Reservations
        </button>
      </form>
      <div class="d-flex gap-4">
        <div class="d-flex gap-4">
          <button
            type="button"
            id="carButton1"
            class="border-0 bg-transparent"
            data-bs-toggle="modal"
            data-bs-target="#carModal1"
          >
            <p id="emptyCar1" title="Car 1 is Empty">
              <%- include("partials/emptycar") %>
            </p>
            <p id="reservedCar1" class="d-none" title="Car 1 is Reserved">
              <%- include("partials/reservedcar") %>
            </p>
          </button>
          <!-- TODO: need to figure out logic for showing editable reservation or other users' reservations (should just be disabled instead of updatable) -->
          <button
            type="button"
            id="carButton2"
            class="border-0 bg-transparent"
            data-bs-toggle="modal"
            data-bs-target="#carModal2"
          >
            <p id="emptyCar2" title="Car 2 is Empty">
              <%- include("partials/emptycar") %>
            </p>
            <p id="reservedCar2" class="d-none" title="Car 2 is Reserved">
              <%- include("partials/reservedcar") %>
            </p>
          </button>
        </div>
        <div class="d-flex gap-4">
          <button type="button" id="carButton3" class="border-0 bg-transparent">
            <p><%- include("partials/emptycar") %></p>
          </button>
          <button type="button" id="carButton4" class="border-0 bg-transparent">
            <p><%- include("partials/emptycar") %></p>
          </button>
        </div>
      </div>
      <div class="d-flex gap-4">
        <div class="d-flex gap-4">
          <button type="button" id="carButton5" class="border-0 bg-transparent">
            <p><%- include("partials/emptycar") %></p>
          </button>
          <button type="button" id="carButton6" class="border-0 bg-transparent">
            <p><%- include("partials/emptycar") %></p>
          </button>
        </div>
        <div class="d-flex gap-4">
          <button type="button" id="carButton7" class="border-0 bg-transparent">
            <p><%- include("partials/emptycar") %></p>
          </button>
          <button type="button" id="carButton8" class="border-0 bg-transparent">
            <p><%- include("partials/emptycar") %></p>
          </button>
        </div>
      </div>
      <button id="signOutButton" class="btn btn-danger mt-1">Sign Out</button>
    </div>
  </body>
  <!-- MODALS FOR CARS -->
  <div
    id="carModal1"
    class="modal fade"
    tabindex="-1"
    aria-labelledby="carModal1Label"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content d-flex align-items-center pt-2">
        <form
          id="carReserve1"
          class="d-flex flex-column mb-3 justify-content-center gap-2"
        >
          <div class="d-flex gap-2">
            <div class="d-flex flex-column">
              <label
                for="fromPicker1"
                class="d-flex justify-content-center fw-bold"
              >
                FROM
              </label>
              <input
                id="fromPicker1"
                name="fromPicker1"
                type="datetime-local"
              />
            </div>
            <div>
              <label
                for="toPicker1"
                class="d-flex justify-content-center fw-bold"
              >
                TO
              </label>
              <input id="toPicker1" name="toPicker1" type="datetime-local" />
            </div>
          </div>
          <button type="submit" class="btn btn-dark">Reserve Car 1!</button>
        </form>
        <form id="carReserved1" class="d-none pt-2 ps-3 pe-2">
          You have reserved this car from
        </form>
      </div>
    </div>
  </div>
  <div
    id="carModal2"
    class="modal fade"
    tabindex="-1"
    aria-labelledby="carModal2Label"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content d-flex align-items-center pt-2">
        <form
          id="carReserve2"
          class="d-flex flex-column mb-3 justify-content-center gap-2"
        >
          <div class="d-flex gap-2">
            <div class="d-flex flex-column">
              <label
                for="fromPicker2"
                class="d-flex justify-content-center fw-bold"
              >
                FROM
              </label>
              <input
                id="fromPicker2"
                name="fromPicker2"
                type="datetime-local"
              />
            </div>
            <div>
              <label
                for="toPicker2"
                class="d-flex justify-content-center fw-bold"
              >
                TO
              </label>
              <input id="toPicker2" name="toPicker2" type="datetime-local" />
            </div>
          </div>
          <button type="submit" class="btn btn-dark">Reserve Car 2!</button>
        </form>
        <form
          id="carReserved2"
          class="d-none pt-2 d-flex flex-column mb-3 justify-content-center gap-2"
        >
          <p id="updateReserve2" class="ps-3 pe-2">
            You have reserved this car from
          </p>
          <div class="d-flex gap-2">
            <div class="d-flex flex-column">
              <label
                for="fromPicker2"
                class="d-flex justify-content-center fw-bold"
              >
                FROM
              </label>
              <input
                id="fromPicker2"
                name="fromPicker2"
                type="datetime-local"
              />
            </div>
            <div>
              <label
                for="toPicker2"
                class="d-flex justify-content-center fw-bold"
              >
                TO
              </label>
              <input id="toPicker2" name="toPicker2" type="datetime-local" />
            </div>
          </div>
          <button type="submit" class="btn btn-dark">Reserve Car 2!</button>
        </form>
      </div>
    </div>
  </div>
